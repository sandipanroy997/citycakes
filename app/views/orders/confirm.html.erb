<div class="product-form confirm-order clearfix">
<h1> CONFIRM ORDER </h1><br/> <br/>
<%= form_for @shipping_address, :url => submit_orders_path do |f| %>

<%= f.label :street %>
<%= f.text_field :street %><br/><br/> 

<%= f.label :city %>
<%= f.text_field :city %><br/><br/> 

<%= f.label :state %>
<%= f.text_field :state %><br/><br/>

<%= f.label :zip %>
<%= f.text_field:zip %><br/><br/>

<%= f.label :country %>
<%= f.text_field :country %><br/><br/>

<%= f.label :phone %>
<%= f.text_field :phone %><br/><br/>  

<%= f.submit "ship my order", class: "cart-btn" %>
<% end %>
</div>
